function __ps1_errs() {
  local err=$?
  if [ "$err" != "0" ]
  then
    echo -e "\a" #bell
    echo -e "‚áí E$err" # print err in red
  fi
}

function __terminal_title() {
  pwd | sed "s|$HOME|~|"
}

PS1=""
#PS1="$PS1"'\[\033]0;$(__terminal_title)\007\]' # set window title iterm
PS1="$PS1"'\033k$(__terminal_title)\033\\' # set window title tmux
PS1="$PS1"'$(__ps1_errs)\n' # show exit code
if test -z "$WINELOADERNOEXEC"
then
  PS1="$PS1"'\[\033[32m\]'       # change color
  PS1="$PS1"'$(__git_ps1 "%s") '   # bash function
fi
PS1="$PS1"'\[\033[33m\]'       # change color
PS1="$PS1"'\w'                 # current working directory
PS1="$PS1"'\[\033[0m\]'        # change color
PS1="$PS1"' $(date +%l:%M)\n'
PS1="$PS1"' üçï '                 # prompt
